source 'https://rubygems.org'

gem 'bundler'

# If you want more control and don't want to use GitHub to generate the site,
# add the gem "jekyll" (and specify a version) instead of the following gem
# ("github-pages"). Don't forget to run `bundle update`!
gem "github-pages", group: :jekyll_plugins

# If you have any plugins, put them here!
group :jekyll_plugins do
  gem "jekyll-paginate", "~> 1.0"
  gem "jekyll-tagging", "~> 1.0"
  gem "jekyll-feed", "~> 0.6"
  gem "jekyll-sitemap", "~> 1.2"
  gem "jekyll-seo-tag", "~> 2.5"
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

# Performance-booster for watching directories on Windows
gem 'wdm', '~> 0.1.0' if Gem.win_platform?
